    "stages": [
      {
        "stage_number": 1,
        "stage_name": "PR Validation & Completeness Check",
        "description": "Procurement validates PR details (specs, quantity, budget, required-by date) and confirms it is complete for processing."
      },
      {
        "stage_number": 2,
        "stage_name": "Technical/Specification Approval",
        "description": "Engineering/QA validates technical specifications, drawings, and compliance requirements (as applicable)."
      },
      {
        "stage_number": 3,
        "stage_name": "Commercial Approval (Budget/Finance)",
        "description": "Finance/budget owner approves funding, cost center allocation, and commercial justification (especially for unbudgeted items)."
      },
      {
        "stage_number": 4,
        "stage_name": "RFQ Issued to Vendors",
        "description": "Buyer issues RFQ to shortlisted vendors with required specs, delivery terms, and quote submission deadline."
      },
      {
        "stage_number": 5,
        "stage_name": "Quotation Received & Comparative Statement",
        "description": "Quotes are received and a comparative statement (CS) is prepared for evaluation."
      },
      {
        "stage_number": 6,
        "stage_name": "Vendor Finalization & Negotiation",
        "description": "Commercial negotiation, selection of vendor, and finalization of price, lead time, and terms."
      },
      {
        "stage_number": 7,
        "stage_name": "Purchase Order (PO) Release",
        "description": "PO is created/released in ERP and sent to vendor; order acknowledgement is obtained."
      },
      {
        "stage_number": 8,
        "stage_name": "Delivery & Goods Receipt (GRN)",
        "description": "Material/service is delivered; stores/receiving performs GRN and records received quantity/date."
      },
      {
        "stage_number": 9,
        "stage_name": "Quality Inspection & Acceptance",
        "description": "Incoming quality inspection is completed; material is accepted/rejected and disposition is recorded."
      },
      {
        "stage_number": 10,
        "stage_name": "Invoice Receipt & 3-Way Match",
        "description": "Vendor invoice is received and matched against PO and GRN; discrepancies are resolved."
      },
      {
        "stage_number": 11,
        "stage_name": "Payment Approval & Release",
        "description": "Payment is approved and released as per agreed payment terms; transaction reference is captured."
      }
    ],
