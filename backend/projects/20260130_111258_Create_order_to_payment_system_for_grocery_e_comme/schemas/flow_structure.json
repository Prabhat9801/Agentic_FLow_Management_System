        {
          "name": "OrderItemID",
          "type": "text",
          "description": "Unique identifier for each order item entry",
          "required": true,
          "validation": null,
          "default_value": null
        },
        {
          "name": "OrderID",
          "type": "text",
          "description": "Associated order for this entry",
          "required": true,
          "validation": null,
          "default_value": null
        },
        {
          "name": "ProductID",
          "type": "text",
          "description": "Associated product in the order",
          "required": true,
          "validation": null,
          "default_value": null
        },
        {
          "name": "Quantity",
          "type": "number",
          "description": "Quantity of the product ordered",
          "required": true,
          "validation": ">0",
          "default_value": null
        },
        {
          "name": "ItemPrice",
          "type": "currency",
          "description": "Price of the product at the time of the order",
          "required": true,
          "validation": null,
          "default_value": null
        },
        {
          "name": "CreatedDate",
          "type": "date",
          "description": "Date when the order item was created",
          "required": true,
          "validation": null,
          "default_value": null
        },
        {
          "name": "ModifiedDate",
          "type": "date",
          "description": "Date when the order item data was last modified",
          "required": false,
          "validation": null,
          "default_value": null
