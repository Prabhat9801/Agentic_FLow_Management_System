        {
          "name": "PaymentAmount",
          "type": "currency",
          "description": "Amount paid in this transaction",
          "required": true,
          "validation": ">0",
          "default_value": null
        },
        {
          "name": "PaymentStatus",
          "type": "text",
          "description": "Current status of the payment",
          "required": true,
          "validation": null,
          "default_value": "pending"
        },
        {
          "name": "PaymentMethod",
          "type": "text",
          "description": "Method used for payment",
          "required": true,
          "validation": null,
          "default_value": null
        },
        {
          "name": "CreatedDate",
          "type": "date",
          "description": "Date when the payment record was created",
          "required": true,
          "validation": null,
          "default_value": null
