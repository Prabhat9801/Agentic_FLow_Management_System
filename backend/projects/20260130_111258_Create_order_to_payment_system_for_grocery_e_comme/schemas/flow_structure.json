        {
          "name": "OrderID",
          "type": "text",
          "description": "Order associated with this payment",
          "required": true,
          "validation": null,
          "default_value": null
        },
        {
          "name": "PaymentDate",
          "type": "date",
          "description": "Date when the payment was made",
          "required": true,
          "validation": null,
          "default_value": null
